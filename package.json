{
    "name": "nb_music",
    "version": "0.2.8",
    "description": "一款在线音乐播放器",
    "main": "src/main.js",
    "scripts": {
        "build": "electron-builder build",
        "build:win": "electron-builder --win --x64",
        "publish": "electron-builder build --publish always",
        "run": "electron .",
        "debug": "electron --inspect=5858 .",
        "debug-brk": "electron --inspect-brk=5858 .",
        "run:clear": "electron . --clear-storage"
    },
    "keywords": [],
    "author": {
        "name": "NB-Group",
        "email": "nb-group@qq.com"
    },
    "license": "GPL-3.0-only",
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "electron": "34.0.2",
        "electron-builder": "^25.1.8",
        "eslint": "^9.18.0",
        "globals": "^15.14.0"
    },
    "dependencies": {
        "@applemusic-like-lyrics/core": "^0.1.3",
        "@pixi/app": "^7.4.2",
        "@pixi/core": "^7.4.2",
        "@pixi/display": "^7.4.2",
        "@pixi/filter-blur": "^7.4.2",
        "@pixi/filter-bulge-pinch": "^5.1.1",
        "@pixi/filter-color-matrix": "^7.4.2",
        "@pixi/sprite": "^7.4.2",
        "NeteaseCloudMusicApi": "^4.25.0",
        "axios": "^1.7.9",
        "bootstrap-icons": "^1.11.3",
        "browser-id3-writer": "^6.2.0",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-store": "8.2.0",
        "electron-updater": "^6.3.9",
        "jsmediatags": "^3.9.7",
        "jss": "^10.10.0",
        "jss-preset-default": "^10.10.0",
        "md5": "^2.3.0",
        "puppeteer": "^24.0.0",
        "qrcode": "^1.5.4"
    },
    "build": {
        "artifactName": "${name}-v${version}-${os}-${arch}.${ext}",
        "productName": "NB Music",
        "directories": {
            "output": "dist"
        },
        "appId": "com.nb.music",
        "asar": true,
        "publish": {
            "provider": "github",
            "owner": "NB-Group",
            "repo": "nb_music"
        },
        "win": {
            "icon": "./icons/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "mac": {
            "icon": "./icons/icon.icns",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "category": "public.app-category.music"
        },
        "linux": {
            "icon": "./icons/icon.png",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Audio"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "installerIcon": "./icons/icon.ico",
            "uninstallerIcon": "./icons/icon.ico",
            "installerHeaderIcon": "./icons/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "NB Music"
        }
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
